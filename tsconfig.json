{
    "compilerOptions": {
	"moduleResolution": "node",  
        "target": "es5",
        "module":"es2015",
	"allowSyntheticDefaultImports": true,
	"experimentalDecorators": true,
        "declaration": true,
	"outDir": "./dist",
	"rootDir": "./src",
	"sourceMap": true,
	"lib": ["es2015", "es2016", "es2017" ],
    "skipLibCheck": false
},
    
   "include": [
        "src/**/*"
    ],
    "exclude": [
	"playgroud",
    "node_modules",
    "**/*.spec.ts"
    ]
}
